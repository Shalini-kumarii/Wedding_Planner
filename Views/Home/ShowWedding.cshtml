@model DashboardViews;
@using Wedding_Planner.Models;
@using System.Collections.Generic;

<!DOCTYPE html>
<html>

<head>
  <meta charset='utf-8'>
  <title>Login!</title>
  <link rel="stylesheet" href="~/css/style.css" />
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
</head>

<body>
  <div>
    <h1>@Model.RenderWedding.WedderOne and @Model.RenderWedding.WedderTwo 's Wedding</h1>
    <h1>Date: @Model.RenderWedding.Date</h1>
  </div>

  <div>
    <h2>Guests:</h2>

    <table class="table table-striped">
      <tbody>
        @foreach (RSVP rsvp in Model.RenderWedding.WeddingGuest)
        {
          <tr>
            <td>@rsvp.AttendingUser.FirstName @rsvp.AttendingUser.LastName </td>
          </tr>
        }
      </tbody>
  </div>

</body>

</html>